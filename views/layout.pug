html
  head(lang="en")
    title Peer Chat App
    meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, minimum-scale=1, user-scalable=no")
    meta(charset='utf-8')

    block styles 
      link(rel="stylesheet", href="//stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css")
      link(rel="stylesheet", href="//use.fontawesome.com/releases/v5.5.0/css/all.css")
      link(rel="stylesheet", href="//cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.css")
      link(rel="stylesheet", href="/assets/css/style.css")
  body
    section#menu
      div
        div
          h1 Peer Chat App
          br
          .no-support.d-none
            .alert.alert-warning 
              p Unfortunately, your web browser does not <a href="//test.webrtc.org/">support WebRTC</a>
          div 
            a.btn.btn-primary.btn-lg(onclick="CreateRoom()") Start
            | &nbsp;
            a.btn.btn-default.btn-lg(onclick="JoinRoom()") Join
    section#chat-room.d-none
      div 
        div.chat
          .card#chat-card
            .card-header.msg-head 
              .d-flex.bd-highlight.justify-content-between
                .user-info 
                  span Room: &nbsp;
                  span#room-info
                a.btn.user-info.fas.fa-share-alt(onclick="ShareRoom()")
            .card-body.msg-card-body#msg-box
            .card-footer
              .alert.alert-warning.d-flex.justify-content-center.align-items-center#input-alert
                p#wait-alert Wait other to join or share your room ID 
                a.btn.fas.fa-share-alt(onclick="ShareRoom()")
              .input-group#input-msg
                .input-group-append
                  span.input-group-text.btn.btn-primary.btn-file.attach-btn#attach-btn
                    i.fas.fa-paperclip
                    input#msg-file(type="file", hidden)
                textarea.form-control.type-msg#msg-text(name="", placeholder="Type your message...")
                .input-group-append
                  span.input-group-text.send-btn 
                    a.fas.fa-location-arrow(onclick="OnSendMessage()")

    block scripts 
      script(src="//code.jquery.com/jquery-3.2.1.slim.min.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js")
      script(src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/malihu-custom-scrollbar-plugin/3.1.5/jquery.mCustomScrollbar.min.js") 
      script(src="//unpkg.com/peerjs@1.3.1/dist/peerjs.min.js")
      script(src="//cdnjs.cloudflare.com/ajax/libs/uuid/8.3.2/uuid.min.js") 
      script(src="/assets/deviceManager.js") 
      script(src="/assets/chat.js")

